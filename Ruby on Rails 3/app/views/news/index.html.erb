
<%= link_to 'New News', new_news_path %>


<h1>Listing news on <%= Time.now %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.author %></td>
    <td><%= news.content %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <tr>
    <td colspan="5">
      Comments (<%= news.comments.count.to_s %>)
      <%= render :partial => 'comments/view', :collection => news.comments %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New News', new_news_path %>
